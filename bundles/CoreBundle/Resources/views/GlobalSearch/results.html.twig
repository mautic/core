<div class="panel-group pa-md" id="globalSearchPanel">
    {%- for header, result in results %}
    <hr>

    <div class="text-secondary pi-md mb-xs d-flex gap-xs">
        {{ header }}
        {% if result.count is defined and result.count is not empty %}
        <span class="label label-gray fs-10 gs-count-badge" size="sm">{{ result.count }}</span>
        {% endif %}
    </div>

    <div class="np">
        <ul class="pa-0">
            {% for k, r in result %}
            {% if 'count' is not same as k %}
            <li class="list-group-item gsearch--results-item">
                {{ r|raw }}
            </li>
            {% endif %}
            {% endfor %}
        </ul>
    </div>

    {%- endfor %}
</div>